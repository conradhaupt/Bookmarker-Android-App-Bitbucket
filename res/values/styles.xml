<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Theme Specific Styles -->
    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse"></style>

    <style name="ActionBar.Blue">
        <item name="android:background">@color/bmark_blue_light</item>
        <item name="android:logo">@drawable/ic_logo_holo_dark</item>
    </style>

    <style name="ActionBar.Red">
        <item name="android:background">@color/bmark_red_light</item>
        <item name="android:logo">@drawable/ic_logo_holo_dark</item>
    </style>

    <style name="ActionBar.Green">
        <item name="android:background">@color/bmark_green_light</item>
        <item name="android:logo">@drawable/ic_logo_holo_dark</item>
    </style>

    <style name="ActionBar.Blue.Inverse" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/bmark_grey_light</item>
        <item name="android:logo">@drawable/ic_logo_bmark_blue</item>
    </style>

    <style name="ActionBar.Red.Inverse" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/bmark_grey_light</item>
        <item name="android:logo">@drawable/ic_logo_bmark_red</item>
    </style>

    <style name="ActionBar.Green.Inverse" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/bmark_grey_light</item>
        <item name="android:logo">@drawable/ic_logo_bmark_green</item>
    </style>

    <style name="ActionBar.ActionButton">
        <item name="android:background">?attr/selection_highlight_background</item>
    </style>

    <!-- Non-theme Specific -->
    <style name="actionOverflowButtonStyle" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">?attr/ic_more</item>
    </style>

</resources>