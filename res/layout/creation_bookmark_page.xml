<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/creation_bookmark_page_wrapper"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/creation_bookmark_page_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/fragment_book_bookmarks_page"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="?attr/text_colour_activated"
        android:textStyle="normal" />

    <NumberPicker
        android:id="@+id/creation_bookmark_page_numberpicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>