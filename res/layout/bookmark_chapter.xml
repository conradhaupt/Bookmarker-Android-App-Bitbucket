<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bookmark_chapter_wrapper"
    android:layout_width="fill_parent"
    android:layout_height="64dp"
    android:addStatesFromChildren="true" >

    <TextView
        android:id="@+id/bookmark_chapter_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:text="@string/fragment_book_information_author_hint"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#808080"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/bookmark_page_value"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="64dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal|center_vertical"
        android:text="50"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/simple_list_item_bookmark_text_size" />

</RelativeLayout>