<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_book_create_padding"
            android:background="@drawable/card_background"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fragment_book_information_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_book_title_height"
                android:layout_marginBottom="@dimen/fragment_book_item_height"
                android:background="@color/bmark_blue_light"
                android:gravity="center"
                android:text="@string/fragment_book_information_title"
                android:textAppearance="@style/BMark_textAppearanceLarge" />

            <EditText
                android:id="@+id/fragment_book_information_edittext_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/fragment_book_information_title_hint"
                android:minHeight="@dimen/fragment_book_item_height" >

                <requestFocus android:layout_width="match_parent" />
            </EditText>

            <EditText
                android:id="@+id/fragment_book_information_edittext_isbn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/fragment_book_information_isbn_hint"
                android:minHeight="@dimen/fragment_book_item_height" >
            </EditText>

            <EditText
                android:id="@+id/fragment_book_information_edittext_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/fragment_book_information_isbn_author"
                android:minHeight="@dimen/fragment_book_item_height" >
            </EditText>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/fragment_book_position_textview_paragraph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_toRightOf="@+id/fragment_book_information_picker_pagecount"
                    android:text="@string/fragment_book_information_page_title"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <NumberPicker
                    android:id="@+id/fragment_book_information_picker_pagecount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>